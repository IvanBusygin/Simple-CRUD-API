{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts",
  ]
}
